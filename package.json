{
  "name": "electron-react-boilerplate",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "cracoConfig": "craco.config.js",
  "dependencies": {
    "@craco/craco": "^5.7.0",
    "electron-is-dev": "^1.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "serialport": "^9.0.1"
  },
  "build": {
    "appId": "com.electron-react",
    "productName": "electron-react",
    "win": {},
    "mac": {},
    "linux": {}
  },
  "scripts": {
    "start": "concurrently \"craco start\" \"wait-on http://localhost:3000 &&  electron .\"",
    "build": "craco build && electron-builder",
    "test": "craco test",
    "eject": "craco eject",
    "install": "electron-rebuild"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "electron": "^8.2.1",
    "electron-builder": "^22.4.1",
    "electron-rebuild": "^2.0.3",
    "wait-on": "^4.0.2"
  }
}
